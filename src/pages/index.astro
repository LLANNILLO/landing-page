---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import Hero from "../components/pages/home/Hero.astro";
import Button from "../components/ui/Button.astro";
import CallToAction from "../components/pages/home/CallToAction.astro";
import InfoSection from "../components/pages/home/InfoSection.astro";
import QuoteSection from "../components/pages/home/QuoteSection.astro";
import Card from "../components/pages/home/Card.astro";

import bloodImage from '../images/blood.jpg'
import travelImage from '../images/travel.jpg'
import historyImage from '../images/history.jpg'
import paradiseImage from '../images/paradise.jpg'
---

<BaseLayout>
  <Header>
    <Hero slot="hero-slot">
      <Button slot="hero-sign-up-button" content="Sign up" />
    </Hero>
  </Header>

  <div class="container">
    <InfoSection>
      <Card cardImage={bloodImage} cardText="We frighten our enemies" slot="section-card-first" />
      <Card cardImage={travelImage} cardText="We travel around the world" slot="section-card-second" />
      <Card cardImage={historyImage} cardText="We have a great history upon our shoulders" slot="section-card-third" />
      <Card cardImage={paradiseImage} cardText="We live in the most beautiful land on earth" slot="section-card-third" />
      
      <InfoSection />
    </InfoSection>
    <QuoteSection />
    <CallToAction>
      <Button slot="action-button" content="Sign up" />
      <CallToAction />
    </CallToAction>
  </div>
  <Footer />
</BaseLayout>
